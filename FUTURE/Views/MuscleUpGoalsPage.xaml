<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FUTURE.Views.MuscleUpGoalsPage"
             BarBackgroundColor="Black"
            SelectedTabColor="#FFD15C"
            UnselectedTabColor="White">
    <TabbedPage.Children>
        <ContentPage Title="День 1" BackgroundColor="Black">
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="BackIcon"/>
                    <Button Opacity="0" Clicked="BackButton_Clicked"/>
                    <Label Margin="0,0,55,0" Grid.Column="1" Text="Набор массы" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24" FontAttributes="Bold"/>
                </Grid>
                <Grid Margin="25,20,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Style="{StaticResource RectangleDays}"/>
                    <Label Text="Начать" Style="{StaticResource WeeksDays}" FontSize="Large"/>
                    <Button Opacity="0" Clicked="Day1StartWorkout"/>
                </Grid>
                <ScrollView Margin="0,20,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="* "/>
                        </Grid.ColumnDefinitions>
                        <Image Source="BrenchPress" Opacity="0.7" />
                        <Label Text="Жим лежа" Style="{StaticResource Exercise}"/>
                        <Image Grid.Row="1" Source="dumbbellbenchpress" Opacity="0.7" ScaleX="1.1" />
                        <Label Grid.Row="1" Text="Жим гантелей на наклонной скамье" Style="{StaticResource Exercise}"/>
                        <Image Grid.Row="2" Source="Crossover" Opacity="0.7" ScaleX="1.7" Aspect="AspectFit"/>
                        <Label Grid.Row="2" Text="Кроссовер" Style="{StaticResource Exercise}"/>
                    </Grid>
                </ScrollView>
            </StackLayout>
        </ContentPage>
        
        
        <ContentPage Title="День 2" BackgroundColor="Black">
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="BackIcon"/>
                    <Button Opacity="0" Clicked="BackButton_Clicked"/>
                    <Label Margin="0,0,55,0" Grid.Column="1" Text="Набор массы" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24" FontAttributes="Bold"/>
                </Grid>
                <Image Source="Rest" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="200" WidthRequest="200" Margin="0,100,0,0"/>
                <Label Text="Отдых" Style="{StaticResource NutritionHead}" Margin="0,0,20,0"/>
            </StackLayout>
        </ContentPage>
        
        

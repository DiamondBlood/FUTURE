            Shell.TabBarTitleColor="White">

        <Tab Title="Питание" Icon="ok.png">
            <ShellContent ContentTemplate="{DataTemplate pages:GoalsPage}"/>
        </Tab>

        <Tab Title="Профиль" Icon="usermale.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}"/>
        </Tab>
    </TabBar>
